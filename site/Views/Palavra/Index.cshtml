@model List<site.Models.Palavra>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Palavra - Listagem</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>

    
    <div class="container">
        <a href="/palavra/cadastrar" class="btn btn-primary">Cadastrar</a>
        <span>Total de registros: <b>@Model.Count</b></span>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Palavra</th>
                    <th scope="col">Nível</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var palavra in Model)
                {
                    <tr>
                        <th scope="row">@palavra.Id</th>
                        <td>@palavra.Nome</td>
                        <td>@palavra.Nivel</td>
                        <td>
                            <a href="/palavra/atualizar/@palavra.Id" class="btn">Editar</a>
                            <a href="/palavra/excluir/@palavra.Id" class="btn">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>